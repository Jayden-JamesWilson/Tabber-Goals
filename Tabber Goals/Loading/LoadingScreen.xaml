<Window x:Name="LoadingWindow" x:Class="Tabber_Goals.Loading.LoadingScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tabber_Goals.Loading"
        mc:Ignorable="d"
        Title="LoadingScreen" Height="237" Width="371"  ResizeMode="NoResize" WindowStartupLocation="CenterScreen" MouseDown="LoadingWindow_MouseDown">
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="1" CornerRadius="10" CaptionHeight="0" ResizeBorderThickness="5"/>
    </WindowChrome.WindowChrome>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="217"/>
        </Grid.RowDefinitions>
        <Button x:Name="CloseButton" Style="{DynamicResource LoadingScreenButtonsFluent}" Margin="347,6,6,6" Content="✕" Click="CloseButton_Click"/>
        <Image Height="70" Width="70" Grid.Row="1" Source="/Assets/App Images/Tabber-Goals-96px.png" Margin="151,38,150,109"/>
        <TextBlock Margin="1,108,0,87" Grid.Row="1" TextAlignment="Center" FontSize="18"  Foreground="#555555" FontFamily="Segoe UI Variable Display" Text="Tabber Goals"/>
    </Grid>
</Window>
