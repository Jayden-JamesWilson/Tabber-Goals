<UserControl x:Class="Tabber_Goals.TabberUI.FluentTabberSeperator.FluentTabberSeperator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tabber_Goals.TabberUI.FluentTabberSeperator"
             mc:Ignorable="d" Name="FluentTabberSeperator1" d:DesignHeight="100" d:DesignWidth="1">

    <Border x:Name="Seperator" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
            Background="{Binding Path=FluentTabberSeperator_BackgroundColour, ElementName=FluentTabberSeperator1, FallbackValue=Black}"/>

</UserControl>
